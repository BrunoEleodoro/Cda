<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LLCad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:text="Cadastro"
                    android:textSize="40sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLDiv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="59dp"
                    app:srcCompat="@drawable/divisoria" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLNome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/Nome"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:text="Nome completo:"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLNomeEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/editText6"
                    android:layout_width="351dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:hint="Nome"
                    android:inputType="textPersonName"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLSenha"
                android:layout_width="351dp"
                android:layout_height="81dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Senha:"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/editText8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLNomeTel"
                android:layout_width="351dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_weight="1.10"
                        android:text="Telefone:"
                        android:textSize="24sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLTelText"
                android:layout_width="351dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="351dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.78"
                    android:ems="10"
                    android:inputType="phone"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLRg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.14"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TextViewrg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RG:"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="351dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:inputType="number"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E-Mail:"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="351dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="exemplo@exemplo.com"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    app:srcCompat="@drawable/divisoria" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLfloatingB"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.03"
                android:orientation="horizontal">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="290dp"
                    android:layout_weight="0.04"
                    android:clickable="true"
                    app:srcCompat="@android:drawable/checkbox_on_background" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>